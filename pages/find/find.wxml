<form class="fs30" bindsubmit="formSubmit" report-submit>

    <view class='section-order mgb-20' wx:for="{{addFinds}}" wx:for-index="idx"  wx:key='addFindKey' wx:for-item="item">
        <view class="cell-padding lh90 flex border-bottom">
            <view  data-index='{{idx}}' bindtap='checkType'>
              <text class="text-theme">*</text>物料类型 : 
              <text style='padding-left:150rpx'>{{item.checkType}}</text>  
<text class='mgl-20 iconfont icon-jiantou'></text>
            </view>
            <view class='close_btn' data-index='{{idx}}' bindtap='closed'><image src='../../public/images/find/close_btn.png'></image></view>
        </view>

        <view class="pd-20 flex align-start">
            <view class="width-200 word-spacing">
                <text class="text-theme">*</text> 描 述 ：</view>

            <textarea hidden='{{isNotes}}' class="flex-1 find-desc height-200"  wx:if="{{!isPopup}}" name="field_desc" data-index='{{idx}}' bindinput='getDescription' value="{{item.desc}}" placeholder='(注：请详细描述物料的名称、用途、材质、交货时间)'>
            </textarea>
        </view>

 <!--找料方式  -->
      <view class="fs30">
          <!--选择找料方式  -->
            <view>
                <view class="flex space-around lh110  {{!item.isSelect?'bottom-border':''}}">
                    <view bindtap='selcetTab' data-index='{{idx}}' data-id="1" class="flex selcetTab1">
                        <text hidden='{{item.selcetTabNum != 1}}' class="iconfont icon-dui fs40 text-theme"></text>
                        <text hidden='{{item.selcetTabNum == 1}}' class="iconfont icon-yuan fs40 text-eb"></text>
                        <text class="mgl-20"></text> 图片找料
                    </view>
                    <view bindtap='selcetTab' data-index='{{idx}}' data-id="2" class="flex">
                        <text hidden='{{item.selcetTabNum != 2}}' class="iconfont icon-dui fs40 text-theme"></text>
                        <text hidden='{{item.selcetTabNum == 2}}' class="iconfont icon-yuan fs40 text-eb"></text>
                        <text class="mgl-20">按样找料</text>
                    </view>
                    <view wx:if='{{!item.isSelect}}' data-index='{{idx}}' bindtap='showSelect' class='iconfont icon-jiantou'></view>
                    <view wx:if='{{item.isSelect}}' data-index='{{idx}}' bindtap='showSelect' class='iconfont icon-xiangxia'></view>
                </view>

                <view wx:if='{{item.isSelect}}' class="flex space-around lh110 border-bottom">
                    <view bindtap='selcetTab' data-index='{{idx}}' data-id="3" class="flex selcetTab3">
                        <text hidden='{{item.selcetTabNum != 3}}' class="iconfont icon-dui fs40 text-theme"></text>
                        <text hidden='{{item.selcetTabNum == 3}}' class="iconfont icon-yuan fs40 text-eb"></text>
                        <text class="mgl-20">按描述找料</text>
                    </view>
                </view>
              <!--1图片找料  -->
              <view hidden='{{item.selcetTabNum != 1}}' class="pd-20 upload-view flex">
                  <view wx:for="{{item.files}}"  wx:for-index="fileIdx" wx:for-item="fileItem" data-index='{{idx}}'  data-id="{{fileIdx}}" wx:key="{{i}}" bindtap='chooseImage' class="relative">
                      <image src='{{fileItem.url}}'></image>
                      <image 
                       data-id="{{fileIdx}}"  
                       data-index='{{idx}}' 
                       catchtap='deleteItem' 
                       wx:if="{{fileItem.pct}}" 
style="width:44rpx;height:44rpx;position:absolute;right:0;top:0rpx;background-color: transparent; border-radius:50%;z-index:999;" src='../../public/images/icon/del.png'></image>

                      <view wx:if="{{fileItem.pct}}" style="width:200rpx;height:200rpx;background:rgba(0,0,0,0.4);position:absolute;left:0;top:0;text-align:center;line-height:200rpx;color:white;font-size:30rpx;">{{fileItem.pct}}</view>
                  <input class="hidden" value="{{fileItem.images_id}}" name="{{'img' + ( fileIdx +1 )}}"></input>
                  </view>
              </view>
              <!-- 按样找料 -->
              <view hidden='{{item.selcetTabNum != 2}}' class="bottom-border">
                  <view class="flex space-around lh110">
                  <view bindtap='selcetSecondTab' data-index='{{idx}}' data-id="1" class="flex selcetSecendTab1">
                      <text hidden='{{item.selcetSecondTabNum != 1}}' class="iconfont icon-dui fs40 text-theme"></text>
                      <text hidden='{{item.selcetSecondTabNum == 1}}' class="iconfont icon-yuan fs40 text-eb"></text>
                      <text class="mgl-20"></text> 上门取样
                  </view>
                  <view bindtap='selcetSecondTab' data-index='{{idx}}' data-id="2" class="flex selcetSecendTab2">
                      <text hidden='{{item.selcetSecondTabNum != 2}}' class="iconfont icon-dui fs40 text-theme"></text>
                      <text hidden='{{item.selcetSecondTabNum == 2}}' class="iconfont icon-yuan fs40 text-eb"></text>
                      <text class="mgl-20">寄送样品</text>
                  </view>
              </view>
              </view>
          </view>
      </view>
  <!--收货地址  -->
      <view class="fs30 bottom-border" hidden='{{item.selcetTabNum != 2}}'>
          <view class="cell-padding fs30 mgt-30" wx:if='{{item.selcetSecondTabNum==1}}'>
              <text class="text-theme">*</text>取样地址
              <input class="hidden" value="{{addressId}}" name="address_id"></input>
          </view>
          <view class="cell-padding fs30 mgt-30" wx:if='{{item.selcetSecondTabNum==2}}'>
              <text class="text-theme"> </text>寄样地址
              <input class="hidden" value="{{addressId}}" name="address_id"></input>
          </view>
          <view class="border-bottom cell-padding address flex flex-start">
              <text class="iconfont icon-dizhi fs40 text-gray mgr-20" wx:if='{{item.selcetSecondTabNum==1}}'></text>
              <view data-index='{{idx}}' bindtap='goConsigneeAddress' wx:if='{{ item.selcetSecondTabNum == 1 }}' hidden='{{ !item.address}}' class="flex-1 address-info fs30">
                  <view class="flex">
                      <text>档口名称: {{item.address.stall || ''}}</text>
                  </view>
                  <view class="flex">
                      <text>联系人<text class='mgl-30'>:</text> {{item.address.consignee}}</text>
                      <text>{{item.address.mobile}}</text>
                  </view>

                  <view>
                      <text>收货地址：</text>
                      <text style='width:440rpx;float:right;'>{{item.address.city_str}} {{item.address.address}}</text>
                  </view>

              </view>

            <view data-index='{{idx}}'  wx:if='{{ item.selcetSecondTabNum == 2 }}' class="flex-1 address-info fs30">
                  <view class="flex">
                      <text class='ellipsis' style='width:300rpx;'>联系人<text class='mgl-30'>:</text> {{companyaddress.consignee}}</text>
                      <text class='company-mobile fll'>{{companyaddress.mobile}}</text>
                  </view>

                  <view>
                      <text>寄样地址：</text>
                      <text style='width:500rpx;float:right;'>{{companyaddress.address}}</text>
                  </view>

              </view>

              <view data-index='{{idx}}' bindtap='goConsigneeAddress'  hidden='{{item.address || item.selcetSecondTabNum == 2 }}' class="text-666 h100 lh100 flex-1">
                  点击添加收货地址
              </view>
          </view>
      </view>
    </view>

    <!--提交按钮  -->
    <view class='add-find' bindtap='addFind' wx:if='{{isAddShow}}'>
      <image src='../../public/images/find/add-find.png'></image>
      <text>点击添加找料</text>
    </view>
     <view class='xuzhi' bindtap='showNotes'>
      <image src='../../public/images/icon/xuzhi.png'></image> <text>《小鹿找料须知》</text>
    </view>
    <view class="cell-padding submit-form">
        <button bindtap="findSubmit" class='btn-shadow'>加入小鹿任务</button>
    </view>
    <view style='height:30rpx;'></view>
   


</form>

<view class='index-popup' wx:if="{{isPopup}}">
    <view class='index-popup-bg' catchtap='closePopup'></view>
    <view class='index-popup-content'>
        <view class='index-popup-title'>加入小鹿任务成功！</view>
        <view class='index-popup-btn'>
            <view class='go-pay btn-shadow' catchtap='goPay'>去结算({{payNum}}s)</view>
            <view class='text-red btn-shadow' catchtap='goBack'>继续找料</view>
        </view>   
    </view>
</view>


<view class='index-popup notes-popup' wx:if="{{isNotes}}">
    <view class='index-popup-bg' catchtap='closePopup'></view>
    <view class='index-popup-content notes-btn-content'>
        <view class='index-popup-title'>小鹿找料须知 <text class='iconfont icon-del1'  catchtap='hiddenNotes'></text></view>
        <view class='index-popup-main bt-1'>
          
          <view>一.  服务区域：</view>
          <view class='fs24'>目前开放的找料区域为 <text class='text-red'>狮岭、三元里</text>，更多开放区域敬请期待。</view>
          <view>二.  服务项目：</view>
          <view class='fs24'>现阶段只找皮革（含真皮、二层皮、PU、PVC)皮具箱包产品纺织面料、皮具箱包产品辅料、托料、五金等。</view>
          <view>三．其他：</view>
          <view class='fs24'>1.本服务平台不提供侵权产品的找料。</view>
          <view class='fs24'>2.本服务平台不提供服务项目以外的产品找料。</view>
          <view class='fs24'>3.由于市场及行业内因素，我们不承诺100%能找到您所需的物料，但我们会以100%的热情去找料。</view>
        </view>
        <view class='index-popup-btn notes-btn'>
            <view class='text-red btn-shadow' catchtap='hiddenNotes'>确定</view>
        </view>   
    </view>
</view>

