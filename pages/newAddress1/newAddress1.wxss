/*选择器*/
.selector{ width: 100%; position: fixed; bottom: 0; left: 0; z-index: 999999}
.selector .inner_box{ position: relative; z-index: 999999}
.selector .header_box{ padding: 25rpx 0; overflow: hidden; box-sizing: border-box; background: #FBF9FE;}
.selector .header_box .item{ float: left; font-size: 34rpx; color: #586C94; box-sizing: border-box;}
.selector .header_box .l{ width: 25%; padding-left: 25rpx;}
.selector .header_box .c{ width: 50%; text-align: center}
.selector .header_box .r{ width: 25%; text-align: right; padding-right: 25rpx;}
.selector .selected{ height: 90rpx;}
.selector .picker_box{ width: 100%; height: 485rpx; background: #fff; font-size: 30rpx;}
.selector .picker_box picker-view-column{ text-align: center;}
.selector .picker_box picker-view-column view{ line-height: 90rpx;}
.selector .layer{ width: 100%; height: 100%; position: fixed; left: 0; top: 0; z-index: 10; background:rgba(0,0,0,0.5); }

.page{ padding-top: 20rpx;}
.page_top{ background: #fff;}
.section{ padding: 30rpx 0rpx 30rpx 10rpx;overflow: hidden; box-sizing: border-box;}
.section .icon{ width: 90rpx; float: left; text-align: center}
.section .icon image{ width: 45rpx; height: 45rpx;}
.section .from_input{ width: calc(100% - 90rpx); padding-bottom: 15rpx; border-bottom: #C8C7CC solid 1.5rpx; box-sizing: border-box;}
.section .from_input input{ width: 100%;}
.section radio-group{ padding-right: 30rpx; padding-bottom: 10rpx;}
.section radio-group label{ padding-left: 25rpx;}
.section .desc{ width: 90%; height: 200rpx; padding: 0 10rpx; font-size: 32rpx; box-sizing: border-box; position:unset;}

.section picker{ display: inline-block; width: 50%;}
.section picker .picker{ color: #333}

.page_bottom{ background: #fff}
.page_bottom .sectionUpload{ padding: 20rpx; overflow: hidden; border-top: #C8C7CC solid 1.5rpx;}
.page_bottom .sectionUpload .item{ width: 160rpx; float: left;}
.page_bottom .sectionUpload .item image{ width: 150rpx; height: 150rpx;}
.page_bottom .sectionUpload .hint{ width: 300rpx; font-size: 30rpx; line-height: 150rpx; color: #828282}

