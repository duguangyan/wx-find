.info-top{
  height: 180rpx;
  background-color: #C81A29;
  position: relative;
}
.info-top .header-img image{
  width: 240rpx;
  height: 240rpx;
  border-radius:50% ;
  text-align: center;
  position: absolute;
  bottom: -120rpx;
  left: 50%;
  margin-left: -120rpx;
  border: 1rpx solid #fff;
  box-shadow: 0px 1px 10px 1px  #F8E9EA;
  background-color: #fff;
}
page{
  background-color: #fff;
}
.edit-img image{
  width: 72rpx;
  height: 72rpx;
  border-radius:50%; 
  position: absolute;
  bottom: -120rpx;
  left: 50%;
  margin-left: 45rpx;
}
.info-content{
  margin-top: 200rpx;
}
.info-content input{
  text-align: right;
  position: relative;
  top: 10rpx;
}
.nickname{
  margin-top: 10rpx;
}
.save{
  width:300rpx;
  height:96rpx;
  background:rgba(187,32,42,1);
  border-radius:48rpx;
  text-align: center;
  line-height: 96rpx;
  color: #fff;
  margin: 0 auto;
  font-size: 32rpx;
  margin-top: 50rpx;
  margin-bottom: 50rpx;
}
.flex-4{
  text-align: right;
}
.info-nav{
  border-bottom: 10rpx solid #eee;
}
.info-nav view{
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  color: #333;
  border: 1rpx solid #eee;
}
.cur{
  background-color: rgba(187,32,42,1);
  color: #fff !important;
}
.certificate_img .pic ,.certificate_img image{
  width: 200rpx;
  height: 200rpx;
  background-color: #eee;
  font-size: 200rpx;
  text-align: center;
  line-height: 160rpx;
  position: absolute;
  top: 0;
  z-index: 9;
  color: #fff;
}
.certificate_img image{
  z-index: 999;
