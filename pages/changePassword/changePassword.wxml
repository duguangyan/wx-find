<!--pages/changePassword/changePassword.wxml-->
<view class='pd-30'>
    <view class='changePassword fs30 cf'>
      <view class='btn-shadow lh90  pdl-30 bg-white radius-10 mgt-10 cf'>
        <text class='fll'>账号: </text> <input class='fll pdl-30 change-password-input' placeholder='请输入账号'></input>
      </view>
      <view class='cf text-fff bg-theme radius-10 btn-shadow change-password-submit' bindtap='usernameSubmit'>
        提交
      </view>
    </view>
    <view class='verification-code fs30'>
      <view>
        验证码已经发送到绑定的手机号码15817390700
      </view>
      <view class='cf'>
          <input class='fll' type='number' placeholder='请输入验证码'></input>
          <view class='fll' bindtap='getVerificationCode'> {{codeText}} <text wx:if='{{isGetCode}}'>({{codeNum}})</text></view>
      </view>
      <view class='cf text-fff bg-theme radius-10 btn-shadow change-password-submit' bindtap='usernameSubmit'>
        下一步
      </view>
    </view>

    <view class='finish fs30'>
      <view class='btn-shadow lh90  pdl-30 bg-white radius-10 finish-t30 cf'>
        <text class='fll'>新密码: </text> <input class='fll pdl-30 change-password-input' placeholder='请输入账号'></input>
      </view>
       <view class='btn-shadow lh90  pdl-30 bg-white radius-10 finish-t30 cf'>
        <text class='fll'>新密码: </text> <input class='fll pdl-30 change-password-input' placeholder='请输入账号'></input>
      </view>
      <view class='cf text-fff bg-theme radius-10 btn-shadow change-password-submit' bindtap='usernameSubmit'>
        完成
      </view>
    </view>
</view>

